<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.employeemgmt.ui.fx.controller.SalaryAdjustmentController"
      spacing="12">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="Salary Adjustment Tool"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Min Salary:"/>
        <TextField fx:id="txtMin" prefWidth="120"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Max Salary:"/>
        <TextField fx:id="txtMax" prefWidth="120"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Increase %:"/>
        <TextField fx:id="txtPercent" prefWidth="120"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Apply" onAction="#onApply"/>
        <Button text="Back" onAction="#onBack"/>
    </HBox>

</VBox>
