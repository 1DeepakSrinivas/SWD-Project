<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.employeemgmt.ui.fx.controller.EmployeeDetailController"
          hgap="10" vgap="8">

    <padding>
        <Insets top="15" right="15" bottom="15" left="15"/>
    </padding>

    <Label text="ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label fx:id="lblId" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="First Name:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label fx:id="lblFirstName" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Last Name:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <Label fx:id="lblLastName" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="SSN:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Label fx:id="lblSSN" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Label text="Email:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
    <Label fx:id="lblEmail" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

    <Label text="Division:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <Label fx:id="lblDivision" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

    <Label text="Job Title:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
    <Label fx:id="lblJobTitle" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <HBox spacing="10" alignment="CENTER_RIGHT"
          GridPane.rowIndex="7" GridPane.columnIndex="0" GridPane.columnSpan="2">
        <Button text="Back" onAction="#onBack"/>
    </HBox>

</GridPane>
