<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.employeemgmt.ui.fx.controller.EmployeePayHistoryController"
      spacing="12">

    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <Label text="Employee FTE Info and Pay History"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Search by:"/>
        <ComboBox fx:id="cmbMode" prefWidth="140"/>
        <TextField fx:id="txtEmpSearch"
                   promptText="Enter ID, SSN, or Name"
                   HBox.hgrow="ALWAYS"/>
        <Button text="Search" onAction="#onSearchEmployee"/>
        <Button text="Back" onAction="#onBack"/>
    </HBox>

    <!-- Employee details table: header row + single data row -->
    <TableView fx:id="tblEmpInfo" prefHeight="80">
        <columns>
            <TableColumn fx:id="colEmpId" text="Employee ID" prefWidth="90"/>
            <TableColumn fx:id="colEmpName" text="Name" prefWidth="160"/>
            <TableColumn fx:id="colEmpSsn" text="SSN" prefWidth="110"/>
            <TableColumn fx:id="colEmpEmail" text="Email" prefWidth="200"/>
            <TableColumn fx:id="colEmpDivision" text="Division" prefWidth="140"/>
            <TableColumn fx:id="colEmpJobTitle" text="Job Title" prefWidth="160"/>
        </columns>
    </TableView>

    <TableView fx:id="tblEmpHistory" prefHeight="360">
        <columns>
            <TableColumn fx:id="colHistStart"
                         text="Period Start"
                         prefWidth="150"/>
            <TableColumn fx:id="colHistEnd"
                         text="Period End"
                         prefWidth="150"/>
            <TableColumn fx:id="colHistAmount"
                         text="Amount"
                         prefWidth="120"/>
        </columns>
    </TableView>

</VBox>


