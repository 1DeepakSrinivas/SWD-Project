<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.employeemgmt.ui.fx.controller.ReportsController"
      spacing="12">

    <padding>
        <Insets top="12" right="12" bottom="12" left="12"/>
    </padding>

    <Label text="Monthly Reports"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Year:"/>
        <ComboBox fx:id="cmbYear" prefWidth="100"/>
        <Label text="Month:"/>
        <ComboBox fx:id="cmbMonth" prefWidth="120"/>
        <Button text="Run Reports" onAction="#onRun"/>
        <Button text="Back" onAction="#onBack"/>
    </HBox>

    <Label text="Total Pay by Job Title:" style="-fx-font-weight: bold;"/>

    <TableView fx:id="tblByJob" prefHeight="160">
        <columns>
            <TableColumn fx:id="colJobTitle" text="Job Title" prefWidth="250"/>
            <TableColumn fx:id="colJobTotal" text="Total Pay" prefWidth="150"/>
        </columns>
    </TableView>

    <Label text="Total Pay by Division:" style="-fx-font-weight: bold;"/>

    <TableView fx:id="tblByDivision" prefHeight="160">
        <columns>
            <TableColumn fx:id="colDivision" text="Division" prefWidth="250"/>
            <TableColumn fx:id="colDivisionTotal" text="Total Pay" prefWidth="150"/>
        </columns>
    </TableView>

</VBox>
